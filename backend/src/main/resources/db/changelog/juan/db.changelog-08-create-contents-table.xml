<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="create-contents-table" author="proyecto-ingsoft">
        <createTable tableName="contents">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="title" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="file_url" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="course_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="lesson_id" type="BIGINT"/>
            <column name="display_order" type="INTEGER"/>
            <column name="is_visible" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="file_extension" type="VARCHAR(10)"/>
            <column name="file_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="lifecycle_status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_content_course"
                                 baseTableName="contents"
                                 baseColumnNames="course_id"
                                 referencedTableName="courses"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_content_lesson"
                                 baseTableName="contents"
                                 baseColumnNames="lesson_id"
                                 referencedTableName="lessons"
                                 referencedColumnNames="id"/>

        <addUniqueConstraint tableName="contents" columnNames="display_order, lesson_id" constraintName="uk_content_order_lesson"/>

        <createIndex tableName="contents" indexName="idx_content_course" unique="false">
            <column name="course_id"/>
        </createIndex>
        <createIndex tableName="contents" indexName="idx_content_lesson" unique="false">
            <column name="lesson_id"/>
        </createIndex>
        <createIndex tableName="contents" indexName="idx_content_order" unique="false">
            <column name="lesson_id"/>
            <column name="display_order"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>