<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="create-course-events-table" author="proyecto-ingsoft">
        <createTable tableName="course_events">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="module_id" type="BIGINT"/>
            <column name="lesson_id" type="BIGINT"/>
            <column name="content_id" type="BIGINT"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="event_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_event_course"
                                 baseTableName="course_events"
                                 baseColumnNames="course_id"
                                 referencedTableName="courses"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_event_module"
                                 baseTableName="course_events"
                                 baseColumnNames="module_id"
                                 referencedTableName="modules"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_event_lesson"
                                 baseTableName="course_events"
                                 baseColumnNames="lesson_id"
                                 referencedTableName="lessons"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_event_content"
                                 baseTableName="course_events"
                                 baseColumnNames="content_id"
                                 referencedTableName="contents"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_event_user"
                                 baseTableName="course_events"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>