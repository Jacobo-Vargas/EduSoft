<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="create-courses-table" author="proyecto-ingsoft">
        <createTable tableName="courses">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="title" type="VARCHAR(120)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="NUMERIC(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="cover_url" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="semester" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="current_status_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="prior_knowledge" type="VARCHAR(500)"/>
            <column name="estimated_duration_minutes" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="audit_status_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="course_state" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_course_category"
                                 baseTableName="courses"
                                 baseColumnNames="category_id"
                                 referencedTableName="categories"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_course_current_status"
                                 baseTableName="courses"
                                 baseColumnNames="current_status_id"
                                 referencedTableName="current_status"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_course_audit_status"
                                 baseTableName="courses"
                                 baseColumnNames="audit_status_id"
                                 referencedTableName="audit_status"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_course_user"
                                 baseTableName="courses"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <createIndex tableName="courses" indexName="idx_course_title" unique="false">
            <column name="title"/>
        </createIndex>
        <createIndex tableName="courses" indexName="idx_course_category" unique="false">
            <column name="category_id"/>
        </createIndex>
        <createIndex tableName="courses" indexName="idx_course_user" unique="false">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="courses" indexName="idx_course_audit_status" unique="false">
            <column name="audit_status_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>