<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="create-users-table" author="proyecto-ingsoft">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="deleted_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="document_number" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="VARCHAR(15)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="address" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="user_type" type="VARCHAR(255)"/>
            <column name="verification" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="verification_token" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>